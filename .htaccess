<IfModule mod_rewrite.c>
    RewriteEngine On

    # If the request is for an existing file or directory in project root, serve it
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise forward everything to public/index.php
    RewriteRule ^ public/index.php [L]
</IfModule>

<IfModule !mod_rewrite.c>
    ErrorDocument 404 index.php
</IfModule>


